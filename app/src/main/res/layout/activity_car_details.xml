<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFF1F5FF"
            app:title="Car Details"
            app:titleTextColor="@android:color/black"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_back2"
            app:navigationIconTint="@color/black" />


        <!-- Car Detail Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingTop="16dp"
            android:paddingBottom="80dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#FFF1F5FF"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView android:id="@+id/textCarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Car Name"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#22000000"
                            android:layout_marginBottom="12dp" />

                        <TextView android:id="@+id/textCarDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="15sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="12dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#22000000"
                            android:layout_marginBottom="16dp" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1"
                            android:layout_marginTop="16dp">

                            <TableRow>
                                <TextView
                                    android:text="Make:"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="#333333"
                                    android:layout_marginBottom="4dp" />
                                <TextView
                                    android:id="@+id/textCarMake"
                                    android:text="Seat"
                                    android:textSize="18sp"
                                    android:textColor="#000000"
                                    android:layout_marginBottom="4dp"
                                    android:textAlignment="textEnd"/>
                            </TableRow>

                            <View style="@style/Divider"/>

                            <TableRow>
                                <TextView
                                    android:text="Model:"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#333333"
                                    android:layout_marginBottom="4dp"/>
                                <TextView
                                    android:id="@+id/textCarModel"
                                    android:text="Cordoba"
                                    android:textSize="18sp"
                                    android:textColor="#000000"
                                    android:layout_marginBottom="4dp"
                                    android:textAlignment="textEnd"/>
                            </TableRow>

                            <View style="@style/Divider"/>

                            <!-- Engine -->
                            <TableRow>
                                <TextView
                                    android:text="Engine:"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#333333" />
                                <TextView
                                    android:id="@+id/textCarEngine"
                                    android:text="1400 cc"
                                    android:textSize="18sp"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#000000"
                                    android:textAlignment="textEnd"/>
                            </TableRow>

                            <View style="@style/Divider"/>

                            <!-- Gas Type -->
                            <TableRow>
                                <TextView
                                    android:text="Fuel:"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#333333" />
                                <TextView
                                    android:id="@+id/textCarGas"
                                    android:text="Gasoline"
                                    android:textSize="18sp"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#000000"
                                    android:textAlignment="textEnd"/>
                            </TableRow>

                            <View style="@style/Divider"/>

                            <!-- Distance Unit -->
                            <TableRow>
                                <TextView
                                    android:text="Distance Unit:"
                                    android:layout_marginBottom="4dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="#333333" />
                                <TextView
                                    android:id="@+id/textCarDistance"
                                    android:text="Kilometers"
                                    android:textSize="18sp"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#000000"
                                    android:textAlignment="textEnd"/>
                            </TableRow>

                            <View style="@style/Divider"/>

                            <!-- Volume Unit -->
                            <TableRow>
                                <TextView
                                    android:text="Volume Unit:"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#333333" />
                                <TextView
                                    android:id="@+id/textCarVolume"
                                    android:text="Liters"
                                    android:textSize="18sp"
                                    android:textColor="#000000"
                                    android:layout_marginBottom="4dp"
                                    android:textAlignment="textEnd"/>
                            </TableRow>

                            <View style="@style/Divider"/>

                            <!-- Consumption Unit -->
                            <TableRow>
                                <TextView
                                    android:text="Consumption:"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_marginBottom="4dp"
                                    android:textColor="#333333" />
                                <TextView
                                    android:id="@+id/textCarConsumption"
                                    android:text="L/100km"
                                    android:textSize="18sp"
                                    android:textColor="#000000"
                                    android:layout_marginBottom="4dp"
                                    android:textAlignment="textEnd"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:orientation="horizontal">
                <!-- TODO: Add edit button -->

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/buttonDeleteCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="DELETE"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="#FFDCE6" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/buttonEditCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="#CFE9FF" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/view_trips_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Trips"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            app:backgroundTint="#F1F0FF"
            app:icon="@drawable/ic_view_trips" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/add_trip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Trip"
            app:icon="@drawable/ic_add"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:backgroundTint="#F1F0FF" />



    </androidx.coordinatorlayout.widget.CoordinatorLayout>



    <!-- Optional: if you want a navigation drawer here -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">


        <include layout="@layout/custom_drawer_content" />

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
