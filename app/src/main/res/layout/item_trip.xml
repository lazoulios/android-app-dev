<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="#F9F8FE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/05/2025"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tripDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 120 km"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tripVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel: 10.5 L"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tripCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost: â‚¬20.00"
                android:textColor="#555555"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/delete_trip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete Trip"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/black"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
